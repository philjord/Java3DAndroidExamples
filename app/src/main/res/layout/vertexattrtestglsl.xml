<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="0.62"
        android:layout_height="0dp"
        android:id="@+id/java3dSpace"
        android:layout_gravity="center_horizontal"
        />

    <CheckBox android:id="@+id/vertexAttrsBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vertexFormat VertexAttrs"
        android:checked="true"/>
    <ToggleButton android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Create Geometry ON"
        android:textOff="Create Geometry OFF"
        android:onClick="createButtonActionPerformed"/>
    <ToggleButton android:id="@+id/destroyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Destroy Geometry ON"
        android:textOff="Destroy Geometry OFF"
        android:onClick="destroyButtonActionPerformed"/>

</LinearLayout>


